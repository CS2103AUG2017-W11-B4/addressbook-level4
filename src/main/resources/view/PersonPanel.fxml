<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="personPanel" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox fx:id="personPanelHeader">
         <children>
            <Label fx:id="name" alignment="TOP_LEFT" />
            <FlowPane fx:id="tags" columnHalignment="CENTER" hgap="5.0" />
         </children>
      </VBox>
      <VBox fx:id="personPanelDetails">
         <children>
            <Label fx:id="phone" alignment="TOP_LEFT" contentDisplay="CENTER" wrapText="true" />
            <Label fx:id="address" alignment="TOP_LEFT" contentDisplay="CENTER" wrapText="true" />
            <Label fx:id="email" alignment="TOP_LEFT" contentDisplay="CENTER" wrapText="true" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="15.0" right="5.0" top="15.0" />
   </padding>
</VBox>
